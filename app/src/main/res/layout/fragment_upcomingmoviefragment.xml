<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".upcomingmoviefragment">

    <!-- TODO: Update blank fragment layout -->
    <FrameLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ProgressBar
            android:visibility="visible"
            android:id="@+id/elastic_download_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            />
    <LinearLayout
        android:id="@+id/rootlayout"
        android:visibility="invisible"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="40dp">
    <android.support.v7.widget.CardView
        app:cardUseCompatPadding="true"
        android:elevation="10dp"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        app:cardCornerRadius="15dp"
        app:cardBackgroundColor="@android:color/black"
        >
        <TextView
            android:textColor="@android:color/white"
            android:textStyle="bold|italic"
            android:layout_marginStart="25dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="UPCOMING MOVIES"
            />
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        app:cardUseCompatPadding="true"
        android:elevation="10dp"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        app:cardCornerRadius="15dp"
        app:cardBackgroundColor="@android:color/black"
        >
        <TextView
            android:textColor="@android:color/holo_red_dark"
            android:id="@+id/viewallupcomingmovies"
            android:textStyle="bold|italic"
            android:layout_marginStart="15dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="View All"
            />
    </android.support.v7.widget.CardView>
</LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerviewupcomingmovies"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >


    </android.support.v7.widget.RecyclerView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <android.support.v7.widget.CardView
                app:cardUseCompatPadding="true"
                android:elevation="10dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                app:cardCornerRadius="15dp"
                app:cardBackgroundColor="@android:color/black"
                >
                <TextView
                    android:textColor="@android:color/white"
                    android:textStyle="bold|italic"
                    android:layout_marginStart="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="NOW PLAYING"
                    />
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                app:cardBackgroundColor="@android:color/black"
                app:cardUseCompatPadding="true"
                android:elevation="10dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:cardCornerRadius="15dp"
                >
                <TextView
                    android:id="@+id/viewallnowplaying"
                    android:textStyle="bold|italic"
                    android:layout_marginStart="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@android:color/holo_red_dark"
                    android:text="View All"
                    />
            </android.support.v7.widget.CardView>


        </LinearLayout>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerviewnowplayingmovies"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <android.support.v7.widget.CardView
                app:cardBackgroundColor="@android:color/black"
                app:cardUseCompatPadding="true"
                android:elevation="10dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                app:cardCornerRadius="15dp"
                >
                <TextView
                    android:textColor="@android:color/white"
                    android:textStyle="bold|italic"
                    android:layout_marginStart="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="POPULAR MOVIES"
                    />
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                app:cardBackgroundColor="@android:color/black"
                app:cardUseCompatPadding="true"
                android:elevation="10dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:cardCornerRadius="15dp"
                >
                <TextView
                    android:textColor="@android:color/holo_red_dark"
                    android:id="@+id/viewallpopularmovies"
                    android:textStyle="bold|italic"
                    android:layout_marginStart="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="View All"
                    />
            </android.support.v7.widget.CardView>


        </LinearLayout>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerviewpopularmovies"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <android.support.v7.widget.CardView
                app:cardBackgroundColor="@android:color/black"
                app:cardUseCompatPadding="true"
                android:elevation="10dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                app:cardCornerRadius="15dp"
                >
                <TextView
                    android:textColor="@android:color/white"
                    android:textStyle="bold|italic"
                    android:layout_marginStart="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="TOP RATED"
                    />
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                app:cardBackgroundColor="@android:color/black"
                app:cardUseCompatPadding="true"
                android:elevation="10dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:cardCornerRadius="15dp"
                >
                <TextView
                    android:textColor="@android:color/holo_red_dark"
                    android:id="@+id/viewalltoprated"
                    android:textStyle="bold|italic"
                    android:layout_marginStart="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="View All"
                    />
            </android.support.v7.widget.CardView>


        </LinearLayout>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerviewtopratedmovies"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />


    </LinearLayout>
    </FrameLayout>
</android.support.v4.widget.NestedScrollView>