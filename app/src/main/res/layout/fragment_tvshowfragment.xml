<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".tvshowfragment">

    <!-- TODO: Update blank fragment layout -->
    <!--<android.support.v7.widget.RecyclerView-->
        <!--android:id="@+id/airingtvshow"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"/>-->


    <FrameLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ProgressBar
            android:visibility="visible"
            android:id="@+id/progressbartvshow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            />
        <LinearLayout
            android:id="@+id/rootlayouttvshow"
            android:visibility="invisible"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <android.support.v7.widget.CardView
                    app:cardUseCompatPadding="true"
                    android:elevation="10dp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    app:cardCornerRadius="15dp"
                    >
                    <TextView
                        android:textStyle="bold|italic"
                        android:layout_marginStart="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Airing Today"
                        />
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    app:cardUseCompatPadding="true"
                    android:elevation="10dp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:cardCornerRadius="15dp"
                    >
                    <TextView
                        android:id="@+id/viewallairingtoday"
                        android:textStyle="bold|italic"
                        android:layout_marginStart="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="View All"
                        />
                </android.support.v7.widget.CardView>
            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/airingtvshow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >


            </android.support.v7.widget.RecyclerView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <android.support.v7.widget.CardView
                    app:cardUseCompatPadding="true"
                    android:elevation="10dp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    app:cardCornerRadius="15dp"
                    >
                    <TextView
                        android:textStyle="bold|italic"
                        android:layout_marginStart="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="TV ON THE AIR"
                        />
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    app:cardUseCompatPadding="true"
                    android:elevation="10dp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:cardCornerRadius="15dp"
                    >
                    <TextView
                        android:id="@+id/viewalltvontheair"
                        android:textStyle="bold|italic"
                        android:layout_marginStart="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="View All"
                        />
                </android.support.v7.widget.CardView>


            </LinearLayout>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/tvontheair"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <android.support.v7.widget.CardView
                    app:cardUseCompatPadding="true"
                    android:elevation="10dp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    app:cardCornerRadius="15dp"
                    >
                    <TextView
                        android:textStyle="bold|italic"
                        android:layout_marginStart="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="POPULAR TV SHOWS"
                        />
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    app:cardUseCompatPadding="true"
                    android:elevation="10dp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:cardCornerRadius="15dp"
                    >
                    <TextView
                        android:id="@+id/viewallpopulartvshows"
                        android:textStyle="bold|italic"
                        android:layout_marginStart="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="View All"
                        />
                </android.support.v7.widget.CardView>


            </LinearLayout>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/populartvshows"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <android.support.v7.widget.CardView
                    app:cardUseCompatPadding="true"
                    android:elevation="10dp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    app:cardCornerRadius="15dp"
                    >
                    <TextView
                        android:textStyle="bold|italic"
                        android:layout_marginStart="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="TOP RATED TV SHOWS"
                        />
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    app:cardUseCompatPadding="true"
                    android:elevation="10dp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:cardCornerRadius="15dp"
                    >
                    <TextView
                        android:id="@+id/viewalltopratedtvshows"
                        android:textStyle="bold|italic"
                        android:layout_marginStart="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="View All"
                        />
                </android.support.v7.widget.CardView>


            </LinearLayout>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/topratedtvshows"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />



        </LinearLayout>
    </FrameLayout>

</android.support.v4.widget.NestedScrollView>